<Window x:Class="WpfApp.RedioButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="RedioButton" Height="450" Width="800">
    <Grid>
        <StackPanel Height="40"  Margin="150" HorizontalAlignment="Left" Orientation="Horizontal">
            <RadioButton Margin="10,0,10,0" Name="radioBtnNan" GroupName="gender" Content="男" IsChecked="True" />
            <RadioButton Margin="10,0,10,0" Name="radioBtnNv" GroupName="gender" Content="女" />
        </StackPanel>
    </Grid>
</Window>
